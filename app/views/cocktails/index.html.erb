<div class="banner" >
  <div class="banner-content" style="text-align: center">
    <h1>Banana Cocktails</h1>
    <p class="fw-light">the best drinks in the world</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3 ">
        <div class="card">
          <div class="card-description">
            <h2 class= 'mt-3'><%= cocktail.name %></h2>
          </div>
          <%= link_to "go to", cocktail_path(cocktail), class: 'btn btn-primary mb-2' %>
          <%= link_to cocktail_path(cocktail), class: 'text-center text-danger ', method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>